<h2>New Restaurant</h2>

<%= simple_form_for(@restaurant) do |form| %>

  <% if @restaurant.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @restaurant.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.input :name %>
  </div>

  <div class="field">
    <%= form.input :address %>
  </div>

  <div class="field">
    <%= form.input :phone_number %>
  </div>

  <div class="field">
    <%= form.input :category %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %> 

<%= link_to 'Back', restaurants_path %>